# WebSocket設定
WS_MESSAGE_QUEUE_SIZE=100
WS_HEARTBEAT_INTERVAL=30

# データ更新間隔（秒）
MARKET_DATA_UPDATE_INTERVAL=60
NEWS_UPDATE_INTERVAL=300
