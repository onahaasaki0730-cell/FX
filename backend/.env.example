# 環境変数設定ファイル

# アプリケーション設定
APP_NAME="Market Analysis System"
APP_VERSION="1.0.0"
DEBUG=True

# データベース設定
DATABASE_URL=sqlite:///./data/market_analysis.db

# Redis設定（オプション）
REDIS_URL=redis://localhost:6379/0
CACHE_EXPIRE=300

# 外部API設定（オプション - 実際のAPIキーを設定してください）
